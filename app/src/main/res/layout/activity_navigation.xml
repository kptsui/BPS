<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundFloorPlanPurpleBlue"
    tools:context="org.bitbucket.kptsui.bps.NavigationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:elevation="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your Parking Space"
            android:textColor="#BFFFFFFF"
            android:textSize="22sp"

            android:shadowColor="#fff"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="6"/>

        <TextView
            android:id="@+id/userParkingLot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="----"
            android:textSize="30sp"
            android:textStyle="bold"

            android:shadowColor="#18FFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="8"/>

    </LinearLayout>


    <WebView
        android:id="@+id/webView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/backgroundFloorPlanPurpleBlue" />


    <info.hoang8f.widget.FButton
        android:id="@+id/btnConfirm"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Arrived"
        fbutton:buttonColor="@color/colorAccent"
        fbutton:shadowColor="@color/colorAccentDark"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="0dp"
        />
</LinearLayout>
