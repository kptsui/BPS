<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#313131"
    android:elevation="2dp"
    android:layout_margin="2dp"
    android:padding="8dp"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftWrapper"
        android:gravity="center"
        android:layout_alignParentLeft="false">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView5"
            android:src="@drawable/carLot_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DS-05"
            android:id="@+id/carLotId"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 120"
        android:id="@+id/payment"
        android:drawableLeft="@drawable/ic_cash"
        android:drawablePadding="3dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/leftWrapper"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.2 hrs"
        android:id="@+id/parked_Time"
        android:drawableLeft="@drawable/ic_timer"
        android:drawablePadding="4dp"
        android:layout_below="@+id/payment"
        android:layout_alignStart="@+id/payment"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00, 04-Jul-16"
        android:id="@+id/in_Time"
        android:drawableLeft="@drawable/ic_clock_in"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:12, 04-Jul-16"
        android:id="@+id/out_Time"
        android:drawableLeft="@drawable/ic_clock_out"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:layout_below="@+id/in_Time"
        android:layout_alignStart="@+id/in_Time"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6"/>
</RelativeLayout>